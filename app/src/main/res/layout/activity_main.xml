<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:textStyle="bold"
            android:text="Fuckin Awesome Demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/string_content_description"
            android:src="@drawable/avatar" />

        <Button
            android:id="@+id/btn_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Http Request" />

        <Button
            android:id="@+id/btn_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FA Recycler View Demo" />

        <Button
            android:id="@+id/btn_mvp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Http To  FaRecyclerView" />

        <Button
            android:id="@+id/btn_flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Concat 2 Request Http To FaRecyclerView" />

        <Button
            android:id="@+id/btn_mix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mix 2 Request Http To FaRecyclerView" />

        <Button
            android:id="@+id/btn_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fa Log" />

        <Button
            android:id="@+id/btn_fa_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recyclerview Loader" />
    </LinearLayout>
</ScrollView>