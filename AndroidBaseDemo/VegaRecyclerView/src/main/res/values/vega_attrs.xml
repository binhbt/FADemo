<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="RecyclerViewWrapper">
        <attr name="vega_pull_to_refresh" format="boolean"/>
        <attr name="vega_load_more" format="boolean" />
        <attr name="vega_progress_in_center" format="boolean" />
        <attr name="vega_orientation">
            <flag name="vertical" value="0x0"/>
            <flag name="horizontal" value="0x01000000"/>
        </attr>
        <attr name="vega_type">
            <flag name="list" value="0x0"/>
            <flag name="grid" value="0x01000000"/>
            <flag name="stagged" value="0x02000000"/>
        </attr>
        <attr name="vega_spanCount" format="integer" />

        <attr name="vega_layout_empty" format="reference"/>
        <attr name="vega_layout_moreProgress" format="reference"/>
        <attr name="vega_layout_progress" format="reference"/>
        <attr name="vega_recyclerClipToPadding" format="boolean"/>
        <attr name="vega_recyclerPadding" format="dimension"/>
        <attr name="vega_recyclerPaddingTop" format="dimension"/>
        <attr name="vega_recyclerPaddingBottom" format="dimension"/>
        <attr name="vega_recyclerPaddingLeft" format="dimension"/>
        <attr name="vega_recyclerPaddingRight" format="dimension"/>
        <attr name="vega_scrollbarStyle">
            <flag name="insideOverlay" value="0x0"/>
            <flag name="insideInset" value="0x01000000"/>
            <flag name="outsideOverlay" value="0x02000000"/>
            <flag name="outsideInset" value="0x03000000"/>
        </attr>
        <attr name="vega_vertical_scrollbarEnabled" format="boolean" />
        <attr name="vega_horizontal_scrollbarEnabled" format="boolean" />
    </declare-styleable>

</resources>